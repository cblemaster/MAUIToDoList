<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIToDoList.MAUI.MainPage">
    <Grid ColumnDefinitions="4*,6*">
        <CollectionView x:Name="list"
                        Margin="5,5,0,0"
                        SelectionMode="Single"
                        ItemsSource="{Binding ToDoItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{Binding Name}"
                               FontSize="22" />
                        <HorizontalStackLayout Spacing="5">
                            <Label Text="Due Date"
                                   FontSize="14"
                                   Margin="5,0,0,0" />
                            <Label Text="{Binding DueDate}"
                                   FontSize="14" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Border Grid.Column="1"
                Stroke="{StaticResource Gray200}"
                BindingContext="{Binding Source={x:Reference list},
                               Path=SelectedItem}">
            <Grid ColumnDefinitions="2*,8*"
                  RowDefinitions="*,*,*,*,*,*">
                <Label Text="Name"
                       VerticalOptions="Center"
                       Margin="5,0,0,0" />
                <Label Text="Description"
                       Grid.Row="1"
                       Margin="5,0,0,0"
                       Grid.RowSpan="2" />
                <Label Text="Is Important"
                       Grid.Row="3"
                       VerticalOptions="Center"
                       Margin="5,0,0,0" />
                <Label Text="Is Complete"
                       Grid.Row="4"
                       VerticalOptions="Center"
                       Margin="5,0,0,0" />
                <Label Text="Due Date"
                       Grid.Row="5"
                       VerticalOptions="Center"
                       Margin="5,0,0,0" />
                <Entry Grid.Column="1"
                       Text="{Binding Name}"
                       MaximumHeightRequest="30"
                       Margin="0,0,5,0" />
                <Editor Grid.Column="1"
                        Grid.Row="1"
                        Text="{Binding Description}"
                        VerticalOptions="FillAndExpand"
                        Margin="0,0,5,0"
                        Grid.RowSpan="2" />
                <CheckBox Grid.Column="1"
                          Grid.Row="3"
                          IsChecked="{Binding IsImportant}"
                          Margin="0,0,5,0" />
                <CheckBox Grid.Column="1"
                          Grid.Row="4"
                          IsChecked="{Binding IsComplete}"
                          Margin="0,0,5,0" />
                <DatePicker Grid.Column="1"
                            Grid.Row="5"
                            Margin="0,0,5,0" />
            </Grid>
        </Border>
    </Grid>
</ContentPage>
